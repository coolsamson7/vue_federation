{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["build-metadata.ts", "feature-parser.ts", "src/**/*.ts"],
  "exclude": ["node_modules"],
  "files": ["build-metadata.ts", "feature-parser.ts", "src/ProductModule.ts"]
}
